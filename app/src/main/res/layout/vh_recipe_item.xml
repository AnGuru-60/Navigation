<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/vh_recipe_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standard"
        android:layout_marginBottom="@dimen/standard"
        android:background="@drawable/bg_list_item_rounded_corners"
        >

        <TextView
            android:id="@+id/vh_recipe_letter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/standard"
            android:layout_marginVertical="20dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="A"
            />

        <TextView
            android:id="@+id/vh_recipe_title"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/vh_recipe_image"
            app:layout_constraintStart_toEndOf="@+id/vh_recipe_letter"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/vh_recipe_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/standard"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/vh_recipe_image"
            app:layout_constraintStart_toEndOf="@+id/vh_recipe_letter"
            app:layout_constraintTop_toBottomOf="@+id/vh_recipe_title"
            tools:text="Description"
            />

        <ImageView
            android:id="@+id/vh_recipe_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/circle_shape"
            android:contentDescription="@string/card_item_image"
            android:paddingHorizontal="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>